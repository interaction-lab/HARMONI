FROM ubuntu:xenial

# Abstractions for apt installation
RUN \
	apt-get update -y && apt-get upgrade -y \
	&& apt-get install -y \
		software-properties-common \
		apt-utils \
        && \
    APT_INSTALL="apt-get install -y --no-install-recommends" && \
    apt-get update && \
    DEBIAN_FRONTEND=noninteractive $APT_INSTALL \
        build-essential \
        ca-certificates \
        # downloading tools
		curl \
        wget \
		zsh \
		unzip \
        # version control
        git \
		git-gui \
		meld \
        # basic editors
        gedit \
        vim \
		fonts-powerline \
        emacs \
        nano \
		nautilus \
        # compilers
        g++ \
        cmake \
        # terminals
		terminator \
		tmux \
		sudo \
        # misc
        htop \
		vlc \
        # pyaudio
        portaudio19-dev libportaudio2 libportaudiocpp0\
        ffmpeg libav-tools \
        # graphics utils
        libcanberra-gtk-module \
		libgl1-mesa-glx \
		libgl1-mesa-dri \
		mesa-utils \
        # docker py-pip \
	&& sed -i 's/geteuid/getppid/' /usr/bin/vlc \
	&& rm -rf /var/lib/apt/lists/* 


# Setup Python3.6 with pip, virtualenv
RUN \
    APT_INSTALL="apt-get install -y --no-install-recommends" \
	&& add-apt-repository -y ppa:deadsnakes/ppa \
	&& apt-get update -y && apt-get upgrade -y \
	&& apt-get install -y \
    && DEBIAN_FRONTEND=noninteractive $APT_INSTALL \
        python3.6 \
		python3.6-dev \
		python3-pip \
		python3-virtualenv \
        # Ros
		python3-yaml \
        #python-catkin-tools \
	&& python3.6 -m pip install --upgrade pip \
	&& python3.6 -m pip install \
        setuptools \
    && python3.6 -m pip install \
        pyaudio \
        # ROS
        pyaml \
        empy \
		rospkg \
		catkin_pkg \
		catkin_tools \
        # AWS
        boto3 \
		awscli \
        # data science
		pandas \
        sklearn \
		statsmodels \
		hmmlearn \
		pmdarima \
		# keras \
		# tensorflow \
        # install pytorch torchvision cudatoolkit=10.2 -c pytorch
        # Utils
		matplotlib \
		dill \
		requests \
		schedule \
		freezegun \
		func_timeout \
		datetimerange \
		jupyterlab \
	&& python3.6 -m pip install --ignore-installed pyyaml \
	&& rm -rf /var/lib/apt/lists/* 





# Setup Pycharm
RUN \
	wget https://download.jetbrains.com/python/pycharm-community-2019.2.5.tar.gz?_ga=2.206607891.1099553149.1574619599-1281313269.1574206878 \
	&& mv pycharm-community-* pycharm-community.tar.gz \
	&& tar xfz pycharm-*.tar.gz -C /opt/ \
	&& rm pycharm-community.tar.gz \
	&& echo 'alias pycharm="/opt/pycharm-community-2019.2.5/bin/pycharm.sh"' >> /root/.bashrc 

# Install Visual Studio Code
RUN \
	apt-get update -y \
	&& apt-get install -y \
		apt-transport-https \
		ca-certificates \
	&& curl https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > microsoft.gpg \
	&& mv microsoft.gpg /etc/apt/trusted.gpg.d/microsoft.gpg \
	&& sh -c 'echo "deb [arch=amd64] https://packages.microsoft.com/repos/vscode stable main" > /etc/apt/sources.list.d/vscode.list' \
	&& apt-get update -y \
	&& apt-get install -y code \
	&& rm -rf /var/lib/apt/lists/* 

# For convenience add a source script to bashrc and update without clearing
RUN \
       echo 'source /root/.dev_setup_script.sh' >> /root/.bashrc 
       # && apt-get update -y && apt-get upgrade -y

