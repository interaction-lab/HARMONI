<!-- This is an example launch file for how a ROS application could use a node -->
<launch>
   
	<arg name="use_face_detect" default="true"/>
	<arg name="test" default="false"/>
	<arg name="input_test" default="10"/>
	<arg name="id_test" default="default"/>
  	<group if="$(arg use_face_detect)">
	  		<rosparam file="$(find harmoni_face_detect)/config/configuration.yaml"/>
	  		<param name="test" value="$(arg test)"/>
			<param name="input_test" value="$(arg input_test)"/>
			<param name="id_test" value="$(arg id_test)"/>
			<node pkg="harmoni_face_detect" type="detector.py" name="face_detect" output="screen"/>
  	</group>


</launch>
